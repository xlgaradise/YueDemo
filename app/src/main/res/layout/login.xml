<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginLeft="35dp"
    android:layout_marginRight="35dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--欢迎部分-->
            <LinearLayout
                android:layout_marginTop="45dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="3"
                    android:id="@+id/text"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:text="欢迎来到APP"
                    android:textSize="30dp"
                    />
                <TextView
                    android:layout_alignBottom="@+id/text"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:text="了解我们"
                    />
            </LinearLayout>
            <!--欢迎部分结束-->
            <!--登陆和注册部分-->
            <LinearLayout
                android:layout_marginTop="40dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="40dp">
                <ImageView
                    android:layout_weight="1"
                    android:background="@drawable/biz_icon_phone"
                    android:layout_width="27dp"
                    android:layout_height="40dp" />
                <EditText

                    android:layout_weight="5"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/phoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="手机号"
                    />
            </LinearLayout>

            <RelativeLayout
                android:layout_marginTop="20dp"

                android:layout_width="match_parent"
                android:layout_height="50dp"
                >
                <ImageView
                    android:id="@+id/imageview"
                    android:background="@drawable/biz_icon_signup_verification_code"
                    android:layout_width="27dp"
                    android:layout_height="40dp" />
                <EditText

                    android:layout_toRightOf="@+id/imageview"
                    android:layout_marginLeft="15dp"
                    android:id="@+id/check_code"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:hint="短信验证码"/>

                <Button
                    android:id="@+id/getCheckNumber"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="获取验证码"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>


            <LinearLayout
                android:layout_marginTop="30dp"
                android:orientation="vertical"

                android:layout_width="match_parent"
                android:layout_height="100dp">
                <Button
                    android:background="@drawable/btn_shape"
                    android:id="@+id/login"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"

                    style="@style/btn_color"
                    android:text="登陆"/>

                <TextView
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:id="@+id/email_register"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:textColor="#51102153"
                    android:text="用邮箱注册"/>
            </LinearLayout>
        </LinearLayout>


            <!-- 这个是底部的第三方登录布局-->
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_weight="10"
                        android:layout_width="60dp"
                        android:layout_height="0dp"
                        android:src="@drawable/biz_btn_login_wechat"/>
                    <TextView
                        android:layout_gravity="center"
                        android:layout_weight="7"
                        android:id="@+id/weixin"
                        android:layout_width="60dp"
                        android:layout_height="0dp"
                        android:gravity="center"
                        android:text="微信"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_weight="10"
                        android:layout_width="60dp"
                        android:layout_height="0dp"
                        android:src="@drawable/biz_btn_login_weibo"/>
                    <TextView
                        android:layout_gravity="center"
                        android:layout_weight="7"
                        android:id="@+id/weibo"
                        android:layout_width="60dp"
                        android:layout_height="0dp"
                        android:gravity="center"
                        android:text="微博"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_weight="10"
                        android:layout_width="60dp"
                        android:layout_height="0dp"
                        android:src="@drawable/biz_btn_login_shanbay"
                        />
                    <TextView
                        android:layout_gravity="center"
                        android:layout_weight="7"
                        android:id="@+id/us"
                        android:layout_width="60dp"
                        android:layout_height="0dp"
                        android:gravity="center"
                        android:text="US"/>
                </LinearLayout>
            </LinearLayout>
         <!-- 第三方布局结束-->
        </LinearLayout>


















