<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <!--主登陆界面-->
        <LinearLayout
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--欢迎部分-->
            <LinearLayout
                android:layout_marginTop="45dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_weight="3"
                    android:id="@+id/text"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:text="欢迎来到APP"
                    android:textSize="30dp"
                    android:textColor="#ffffff"
                    />
            </LinearLayout>
            <!--欢迎部分结束-->
            <!--登陆和注册部分-->
            <LinearLayout
                android:layout_marginTop="40dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:background="@drawable/biz_icon_signup_phone"
                    android:layout_width="30dp"
                    android:layout_height="40dp" />
                <EditText
                    android:id="@+id/et_number"
                    android:layout_marginLeft="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:hint="请输入手机号"
                    android:background="@drawable/shape_login_et"
                    />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:id="@+id/imageview"
                    android:background="@drawable/biz_icon_signup_verification_code"
                    android:layout_width="30dp"
                    android:layout_height="40dp" />
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:id="@+id/et_checkcode"
                        android:layout_toRightOf="@+id/imageview"
                        android:layout_marginLeft="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:hint="短信验证码"
                        android:background="@drawable/shape_login_et"/>

                    <Button
                        android:id="@+id/btn_Code"
                        android:layout_marginTop="-5dp"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:text="获取验证码"
                        android:layout_gravity="right"
                        android:background="@drawable/shape_login_button"/>
                </FrameLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="50dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <Button
                    android:background="@drawable/btn_shape"
                    android:id="@+id/btn_login"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    style="@style/btn_text"
                    android:text="登陆"/>

                <Button
                    android:id="@+id/btn_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="#51102153"
                    android:text="用邮箱注册"
                    android:background="@drawable/bg_filling"/>

            </LinearLayout>
        </LinearLayout>
            <!-- 这个是底部的第三方登录布局-->
            <TextView
                android:paddingBottom="20dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="------------第三方登录------------"
                android:textColor="#51102153"/>

            <RadioGroup
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="16dp"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal">
                <RadioButton
                    android:button="@null"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:drawableTop="@drawable/biz_btn_login_wechat"
                    android:gravity="center_horizontal"/>
                <RadioButton
                    android:button="@null"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:drawableTop="@drawable/biz_btn_login_weibo"
                    android:gravity="center_horizontal"/>
                <RadioButton
                    android:id="@+id/log_phone_rbtn_us"
                    android:button="@null"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:drawableTop="@drawable/biz_btn_login_us"
                    android:gravity="center_horizontal"/>
            </RadioGroup>
         <!-- 第三方布局结束-->
        </LinearLayout>


















