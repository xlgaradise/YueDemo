<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_window">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/iv_card_avatar"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/shape_window"/>
            <TextView
                android:id="@+id/tv_card_name"
                android:layout_toRightOf="@id/iv_card_avatar"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:text="name："/>
            <TextView
                android:id="@+id/tv_card_signature"
                android:layout_alignLeft="@id/tv_card_name"
                android:layout_below="@id/tv_card_name"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="signature:"/>

        </RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp">
            <Button
                android:id="@+id/btn_chat"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@drawable/shape_button"
                android:textColor="@color/white"
                android:text="发起聊天"/>
            <Button
                android:id="@+id/btn_addfriend"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:background="@drawable/shape_button"
                android:textColor="@color/white"
                android:text="加为好友"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
