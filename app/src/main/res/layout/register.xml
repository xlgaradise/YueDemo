<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginLeft="35dp"
    android:layout_marginRight="35dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="50dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_weight="1"
                android:background="@drawable/biz_icon_bottom_navigation_user"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <EditText
                android:layout_marginLeft="15dp"
                android:layout_weight="9"
                android:id="@+id/et_name"
                android:text="用户名"
                android:layout_width="match_parent"
                android:layout_height="50dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_weight="1"
                android:background="@drawable/biz_icon_mail"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <EditText
                android:layout_marginLeft="15dp"
                android:layout_weight="9"
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="邮箱"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_weight="1"
                android:background="@drawable/biz_icon_password"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <EditText
                android:layout_marginLeft="15dp"
                android:layout_weight="9"
                android:id="@+id/et_pwd"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="设置密码"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_weight="1"
                android:background="@drawable/biz_icon_confirm_password"
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <EditText
                android:layout_marginLeft="15dp"
                android:layout_weight="9"
                android:id="@+id/et_pwd_again"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="确认密码"/>
        </LinearLayout>
    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:background="@drawable/btn_shape"
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            style="@style/btn_color"
            android:text="注册" />
        <TextView
            android:id="@+id/tv_phone_register"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="用手机注册"
            android:layout_width="match_parent"
            android:layout_height="@dimen/register_layout_height" />
    </LinearLayout>

</LinearLayout>