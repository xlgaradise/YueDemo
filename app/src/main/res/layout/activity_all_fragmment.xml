<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    //Head
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#000000">
        <TextView
            android:layout_width="340dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:text="Let's Date!"
            android:textSize="25sp"
            android:textColor="#ffffff"/>
        <Button
            android:id="@+id/btn_menu"
            android:layout_gravity="right"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/tg"/>
    </FrameLayout>


    <FrameLayout
        android:id="@+id/fg_container"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>
    <RadioGroup
        android:id="@+id/radiogruop"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/shape_rdbtn">
        <!--<RadioButton-->
            <!--android:id="@+id/rd_community"-->
            <!--android:gravity="center_horizontal"-->
            <!--android:layout_weight="1"-->
            <!--android:text="最近联系人"-->
            <!--android:drawableTop="@drawable/seletcor_rdbtn_community"-->
            <!--android:textColor="@drawable/selector_txt_color"-->
            <!--android:button="@null"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="wrap_content" />-->
        <RadioButton
            android:id="@+id/rd_message"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:text="通讯录"
            android:drawableTop="@drawable/seletcor_rdbtn_message"
            android:textColor="@drawable/selector_txt_color"
            android:button="@null"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/rd_find"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:text="发现"
            android:textColor="@drawable/selector_txt_color"
            android:drawableTop="@drawable/seletcor_rdbtn_find"
            android:button="@null"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/rd_mine"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:text="个人中心"
            android:drawableTop="@drawable/seletcor_rdbtn_mine"
            android:textColor="@drawable/selector_txt_color"
            android:button="@null"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </RadioGroup>
</LinearLayout>