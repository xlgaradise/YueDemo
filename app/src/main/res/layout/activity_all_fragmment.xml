<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
        android:id="@+id/fg_container"
        android:layout_weight="1"
        android:background="@color/_blue"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>
    <RadioGroup
        android:id="@+id/radiogruop"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <RadioButton
            android:id="@+id/rd_date"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:text="约吧"
            android:drawableTop="@drawable/seletcor_rdbtn_1"
            android:textColor="@drawable/selector_txt_color"
            android:button="@null"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/rd_message"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:text="通讯录"
            android:drawableTop="@drawable/seletcor_rdbtn_3"
            android:textColor="@drawable/selector_txt_color"
            android:button="@null"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/rd_find"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:text="发现"
            android:textColor="@drawable/selector_txt_color"
            android:drawableTop="@drawable/seletcor_rdbtn_2"
            android:button="@null"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <RadioButton
            android:id="@+id/rd_mine"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:text="我的"
            android:drawableTop="@drawable/seletcor_rdbtn_4"
            android:textColor="@drawable/selector_txt_color"
            android:button="@null"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </RadioGroup>
</LinearLayout>