<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <!--第三方登陆界面-->

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="300dp"
        android:layout_height="300dp">
        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="Let's Date！"
            android:textSize="30dp"
            android:textColor="#ffffff"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageView
                android:layout_weight="1"
                android:background="@drawable/biz_icon_user"
                android:layout_width="0dp"
                android:layout_height="30dp" />
            <EditText
                android:layout_weight="9"
                android:layout_marginLeft="15dp"
                android:id="@+id/login_account"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:hint="手机/邮箱"
                android:background="@drawable/shape_login_et"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <ImageView
                android:layout_weight="1"
                android:background="@drawable/biz_icon_confirm_password"
                android:layout_width="0dp"
                android:layout_height="30dp" />
            <EditText
                android:layout_weight="9"
                android:layout_marginLeft="15dp"
                android:id="@+id/login_pwd"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:hint="密码"
                android:inputType="textPassword"
                android:background="@drawable/shape_login_et"
                />
        </LinearLayout>
        <Button
            android:background="@drawable/btn_shape"
            android:id="@+id/log_pwd_btn_login"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            style="@style/btn_text"
            android:text="登录"/>
        <Button
            android:id="@+id/log_pwd_btn_phone"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="center"
            android:textColor="#51102153"
            android:text="手机验证码登陆"
            android:background="@drawable/bg_filling" />
    </LinearLayout>
</LinearLayout>